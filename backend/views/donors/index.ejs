<head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/manageClientAccounts.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/AdminPageStyle.css">
</head>

<%-include('../layouts/partials/Admin/AdminMenu.ejs')%> 

    <div id="interface">

        <div class="manage-staff-interface">
            <h3 class="interface-name" style="margin-bottom: 8px;">Manage Donators</h3>
            <a href="/admin/manage-accounts/register/registerDonor"  >Register Donators</a>
            <form action="/admin/manage-accounts/view/donors" method="get">
                <label for="email" >Search Donators</label>
                <input type="text" name="email" placeholder="Donator email..." value="<%= searchOption.email  %>">
                <button id="buttonManageStaff" type="submit">Search</button>
            </form>
        </div>

        <div class="scrollable-table">
            <table class="table">
                <% if (donors.length > 0) { %>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Number of Points</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% donors.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.pointsEarned %>
                            </td>
                            <td>
                                <a
                                    href="/admin/manage-accounts/edit/donor/<%= item.id %>"><button>Edit</button></a>
                                <form action="/admin/manage-accounts/delete/donor/<%= item.id %>?_method=DELETE"
                                    method="POST">
                                    <button type="submit">Delete</button>
                                </form>
                                <% }) %>
                            </td>
                        </tr>
                </tbody>
            </table>
            <% } else { %>
                <p>No data available</p>
            <% } %>

        </div>

    </div>
