<head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/manageClientAccounts.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/AdminPageStyle.css">
</head>

<%-include('../layouts/partials/Admin/AdminMenu.ejs')%> 

    <div id="interface">

        <div class="manage-staff-interface">
            <h3 class="interface-name" style="margin-bottom: 8px;">Manage Administrators</h3>
            <a href="/admin/manage-accounts/register/registerAdmin"  >Register Administrators</a>
            <form action="/admin/manage-accounts/view/admins" method="get">
                <label for="email" >Search Administrators</label>
                <input type="text" name="email" placeholder="Administrator email..." value="<%= searchOption.email  %>">
                <button id="buttonManageStaff" type="submit">Search</button>
            </form>
        </div>

        <div class="scrollable-table">
            <% if (admins.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Contact</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% admins.forEach(item => { %>
                            <tr>
                                <td>
                                    <%= item.name %>
                                </td>
                                <td>
                                    <%= item.email %>
                                </td>
                                <td>
                                    <a href="/admin/manage-accounts/edit/admin/<%= item.id %>"><button>Edit</button></a>
                                    <form action="/admin/manage-accounts/delete/admin/<%= item.id %>?_method=DELETE" method="POST">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No data available</p>
            <% } %>

        </div>

    </div>
